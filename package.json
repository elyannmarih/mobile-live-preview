{
  "name": "mobile-live-preview",
  "displayName": "Mobile Live Preview",
  "description": "Instantly preview your website inside a mobile frame, live from VS Code! Speed up your responsive design workflow and get that 'phone feel' without switching to your browser.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mobile-live-preview",
        "title": "Open in Mobile Live Preview"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mobile-live-preview",
          "when": "resourceExtname =~ /\\.(html|htm)$/i",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Mobile Live Preview Configuration",
      "properties": {
        "mobileLivePreview.port": {
          "type": "number",
          "default": 5500,
          "description": "Fallback port for Mobile Live Preview when no Live Server port is configured."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
